{
  "php": ">=5.5.0",
  "autoload": {
    "psr-4": {
      "": "src/",
      "Test\\" : "unit-tests/"
    }
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/kryoz/bicycle"
    }
  ],
  "require": {
    "react/react": "@stable",
    "cboden/Ratchet": "@stable",
    "zendframework/zend-config": "@stable",
    "monolog/monolog": "@stable",
    "orno/di": "@stable",
    "robmorgan/phinx": "@stable",
    "kryoz/core": "dev-master",
    "silex/silex": "1.*@stable",
    "symfony/yaml":"@stable",
    "symfony/config":"@stable",
    "twig/twig": "@stable",
    "symfony/twig-bridge": "@stable",
    "swiftmailer/swiftmailer": "@stable",
    "symfony/translation": "@stable",
    "guzzlehttp/guzzle" : "@stable"
  },
  "require-dev": {
    "phpunit/phpunit": "4.*@stable"
  },
  "config": {
    "bin-dir": "bin/"
  }
}
